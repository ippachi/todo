<header class="ui fixed inverted menu">
  <div class="ui container">
  <div class="header item">
    <%= link_to 'TODO', root_url, class: "header item"%>
  </div>
  <% if !user_signed_in? %>
    <div class="right item">
      <%= link_to 'sign up', new_user_registration_path, class: "item" %>
      <%= link_to 'sign in', new_user_session_path, class: "item" %>
    </div>
  <% else %>
    <div class="right item">
      <div class="ui dropdown item">
        <%= current_user.name %>
        <i class="dropdown icon"></i>
        <div class="menu">
          <%= link_to tasks_path, class: "item" do %> 
            <i class="tasks icon"></i>tasks
          <% end %>
          <%= link_to edit_user_registration_path, class: "item" do %> 
            <i class="setting icon"></i>setting
          <% end %>
          <%= link_to destroy_user_session_path, method: :delete, class: "item" do %> 
            <i class="sign out icon"></i>sign out
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</header>