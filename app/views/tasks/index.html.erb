<h1>Your tasks</h1>

<%= link_to "create_new_task", new_user_task_path(current_user), class: "ui button primary" %>

<%= render "search_form" %>

<div class="ui top attached tabular menu">
  <a class="item active" data-tab="first">TODO list</a>
  <a class="item" data-tab="second">Finished list</a>
</div>

<div class="task-list">
  <div class="ui bottom attached tab segment active" data-tab="first">
    <%= render "task_list", tasks: @unfinished_tasks %>
  </div>

  <div class="ui bottom attached tab segment" data-tab="second">
    <%= render "task_list", tasks: @finished_tasks %>
  </div>
</div>