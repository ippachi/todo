<%= form_for task, html:{class: "ui form segment"} do |f| %>
  <div class="field">
    <%= f.label :content %>
    <%= f.text_field :content %>
  </div>

  <div class="two fields">
    <div class="field">
      <%= f.label :category %>
      <%= f.select :category, Task.categories, {}, {class: "ui fluid dropdown"} %>
    </div>

    <div class="field">
      <%= f.label :dead_limit, "Dead line" %>
      <%= f.date_field :dead_limit %>
    </div>
  </div>

  <div class="field">
    <%= f.submit class: "ui button primary" %>
  </div>
<% end %>