<!DOCTYPE html>
<html>
  <head>
    <title>TaskApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     
    <div class="ui container">
      <% flash.each do |k,v|%>
        <div class="ui <%= k %> message">
          <i class="close icon"></i>
          <%= v %>
        </div>
      <% end %>
    </div>

    <header class="ui fixed inverted menu">
      <div class="ui container">
      <div class="header item">
        <%= link_to 'TODO', root_url, class: "header item"%>
      </div>
      <% if !user_signed_in? %>
        <div class="right item">
          <%= link_to 'sign up', new_user_registration_path, class: "item" %>
          <%= link_to 'sign in', new_user_session_path, class: "item" %>
        </div>
      <% else %>
        <div class="right item">
          <%= link_to 'sign out', destroy_user_session_path, method: :delete, class: "item" %>
          <%= link_to 'user setting', edit_user_registration_path, class: "item" %>
          <%= link_to current_user.name, current_user, class: "item" %>
        </div>
      <% end %>
      </div>
    </header>
    <div class="ui container">
      <%= yield %>
    </div>
    <footer class="ui inverted vertical footer segment">
    </footer>
  </body>
</html>
